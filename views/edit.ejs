
<%- include('partials/header') %>


<div class="container">
    <div class="jumbotron">
      <h1>Edit page </h1>
    </div>
</div>



<div class="container">
    <form method="POST" action="/blogs/<%=blog._id%>?_method=PUT" >
      <div class="form-group">
        <label for="usr">Title</label>
        <input type="text" class="form-control" id="usr" name ="title" value="<%= blog.title %>">
      </div>
      <div class="form-group">
        <label for="pwd">Image url</label>
        <input type="text" class="form-control" id="pwd" name ="image"value="<%- blog.image %>">
      </div>

      <div class="form-group">
        <label for="comment">Comment:</label>
             <textarea class="form-control" rows="5" id="comment" name="body">
                <%= blog.body %>
             </textarea>
      </div>
      <div class="form-group">
        <button type="submit"  value="Submit">Submit</button>              
    </div>
    </form>
  </div>
  

<%- include('partials/footer') %>